%div.post-section__header.clearfix
  = render 'posts/share', post: post
  .post-section__header__meta
    = byline post.user
    %span.post-section__header__meta__date
      = date_f post.created_at
      - if can? :update, post.specific
        = link_to '수정', [:edit, post.specific]
      - if can? :destroy, post.specific
        = link_to '삭제', post.specific, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }
